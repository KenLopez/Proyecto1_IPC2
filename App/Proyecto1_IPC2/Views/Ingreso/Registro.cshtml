@model Proyecto1_IPC2.Models.ViewModels.addUsuarioViewModel
@{
    ViewBag.Title = "Registro";
    ViewBag.Style = "~/css/registro.css";
    ViewBag.Bootstrap = false;
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<header>
    <p><img id="logo" src="~/img/Logo Othello.jpg" onclick="location.href='@Url.Action("Index", "Home")'" /></p>
</header>
@using (Html.BeginForm("Registro", "Ingreso", FormMethod.Post))
{
    <article>
        <fieldset>
            <legend>Registro</legend>

            @Html.ValidationSummary(true, "", new { @class = "error" })

            @Html.LabelFor(d => d.Nombre, "Nombres:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.Nombre, "", new { @class = "input" })<br />
            @Html.ValidationMessageFor(d => d.Nombre, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Apellido, "Apellidos:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.Apellido, "", new { @class = "input" })<br />
            @Html.ValidationMessageFor(d => d.Apellido, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.NombreUsuario, "Nombre de Usuario:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.NombreUsuario, "", new { @class = "input" })<br />
            @Html.ValidationMessageFor(d => d.NombreUsuario, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Contraseña, "Contraseña:", new { @class = "label" })<br />
            @Html.PasswordFor(d => d.Contraseña, new { @class = "input", @type = "password"})<br />
            @Html.ValidationMessageFor(d => d.Contraseña, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Confirmar, "Confirmar contraseña:", new { @class = "label" })<br />
            @Html.PasswordFor(d => d.Confirmar, new { @class = "input", @type = "password" })<br />
            @Html.ValidationMessageFor(d => d.Confirmar, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Fecha, "Fecha de nacimiento:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.Fecha, new { @class = "fecha", @type = "date" })<br />
            @Html.ValidationMessageFor(d => d.Fecha, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Pais, "País:", new { @class = "label" })<br />
            @Html.DropDownListFor(d => d.Pais, new SelectList(Enum.GetValues(typeof(Proyecto1_IPC2.Models.ViewModels.pais))), new { @class = "select" })<br />
            @Html.ValidationMessageFor(d => d.Pais, "", new { @class = "error" })<br />

            @Html.LabelFor(d => d.Correo, "Correo Electrónico:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.Correo, "", new { @class = "input", @type = "email" })<br />
            @Html.ValidationMessageFor(d => d.Correo, "", new { @class = "error" })<br />
        </fieldset>
        <input type="submit" value="Ingresar" />
    </article>
}