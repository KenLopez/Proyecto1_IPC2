                        {
                            <button name="boton" value=@(48+i) type="submit" class="@Model.Mesa.Cuadricula[6,i].getColor() @Model.Mesa.Cuadricula[6,i].getState()"></button>
                        }
                    }
                </div>
                <div class="fila" id="octavo">
                    @for (int i = 0; i < 8; i++)
                    {
