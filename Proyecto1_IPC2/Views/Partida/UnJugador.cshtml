                        {
                            <button name="boton" value=@(16+i) type="submit" class="@Model.Mesa.Cuadricula[2,i].getColor() @Model.Mesa.Cuadricula[2,i].getState()"></button>
                        }
                    }
                </div>
                <div class="fila" id="cuarto">
                    @for (int i = 0; i < 8; i++)
                    {
                        if (!Model.Mesa.Cuadricula[3, i].Estado)
                        {
