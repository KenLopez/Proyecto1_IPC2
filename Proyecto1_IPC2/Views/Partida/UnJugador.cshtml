                        }
                    }
                </div>
                <div class="fila" id="septima">
                    @for (int i = 0; i < 8; i++)
                    {
                        if (!Model.Mesa.Cuadricula[6, i].Estado)
                        {
                            <button name="boton" value=@(48+i) type="submit" class="@Model.Mesa.Cuadricula[6,i].getColor() @Model.Mesa.Cuadricula[6,i].getState()" disabled></button>
                        }
