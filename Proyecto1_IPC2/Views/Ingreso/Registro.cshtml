@model Proyecto1_IPC2.Models.ViewModels.addUsuarioViewModel
@{
    ViewBag.Title = "Registro";
    ViewBag.Style = "~/css/registro.css";
}

<header>
    <p><img id="logo" src="~/img/Logo Othello.jpg" onclick="location.href='@Url.Action("Index", "Home")'" /></p>
</header>
<article>
    <form id="form1" runat="server">
        <fieldset>
            <legend>Registro</legend>
            @Html.LabelFor(d => d.nombre, "Nombres:", new { @class = "label", required = "required" })<br />
            @Html.TextBoxFor(d => d.nombre, "", new { @class = "input" })
            @Html.ValidationMessageFor(d => d.nombre, "", new { @class = "alert" })<br />

            @Html.LabelFor(d => d.apellido, "Apellidos:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.apellido, "", new { @class = "input" })
            @Html.ValidationMessageFor(d => d.apellido, "", new { @class = "alert" })<br />

            @Html.LabelFor(d => d.nombreUsuario, "Nombre de Usuario:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.nombreUsuario, "", new { @class = "input" })<br />

            @Html.LabelFor(d => d.contraseña, "Contraseña:", new { @class = "label" })<br />
            @Html.PasswordFor(d => d.contraseña, new { @class = "input" })<br />

            @Html.LabelFor(d => d.confirmar, "Confirmar contraseña:", new { @class = "label" })<br />
            @Html.PasswordFor(d => d.confirmar, new { @class = "input" })<br />

            @Html.LabelFor(d => d.pais, "País:", new { @class = "label" })<br />
            @Html.DropDownListFor(d => d.pais, new SelectList(Enum.GetValues(typeof(Proyecto1_IPC2.Models.ViewModels.pais))), new { @class = "select" })<br />

            @Html.LabelFor(d => d.correo, "Correo Electrónico:", new { @class = "label" })<br />
            @Html.TextBoxFor(d => d.correo, "", new { @class = "input", type = "email" })
        </fieldset>
        <input type="submit" value="Ingresar" />
    </form>
</article>