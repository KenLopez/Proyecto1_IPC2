
@{
    ViewBag.Title = "Registro";
    ViewBag.Style = "~/css/registro.css";
}

<article>
    <form id="form1" runat="server">
        <fieldset>
            <legend>Registro</legend>
            <label for="nombre">Nombres:</label>
            <br />
            <input class="input" type="text" id="nombre" required />
            <br />
            <label for="apellido">Apellido:</label>
            <br />
            <input class="input" type="text" id="apellido" required />
            <br />
            <label for="usuario">Nombre de Usuario:</label>
            <br />
            <input class="input" type="text" id="usuario" required />
            <br />
            <label for="password">Contraseña:</label>
            <br />
            <input class="input" type="password" id="password" required />
            <br />
            <label for="confirmar">Confirmar Contraseña:</label>
            <br />
            <input class="input" type="password" id="confirmar" required />
            <br />
            <label for="fecha">Fecha de Nacimiento: </label>
            <br />
            <input class="input" type="date" id="fecha" required />
            <br />
            <label for="pais">País:</label>
            <br />
            <select id="pais" class="select">
                <option>Guatemala</option>
                <option>El Salvador</option>
                <option>Estados Unidos</option>
            </select>
            <br />
            <label for="correo">Correo Electrónico:</label>
            <br />
            <input class="input" type="email" id="correo" required />
        </fieldset>
        <input type="submit" value="Ingresar" />
    </form>
</article>